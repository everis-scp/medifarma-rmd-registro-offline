<core:FragmentDefinition
	xmlns:core="sap.ui.core"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
    xmlns:u="sap.ui.unified"
    xmlns:layout="sap.ui.layout">
  <Dialog class="sapUiContentPadding sapUiSizeCompact" contentWidth="auto" title="{i18n>tltSelectImagen}">
		<content>
			<u:FileUploader change="onUploadImagen" fileType="jpg,png"/> <!--icon="sap-icon://upload" iconOnly="true" buttonOnly="true" -->
		</content>
    <beginButton>
			<Button text="{i18n>btnConfirm}" press="onConfirmSelectImagen" type="Accept"/>
		</beginButton>
		<endButton>
			<Button text="{i18n>btnClose}" press="onCancelSelectImagen" type="Reject"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>