				</fb:control>
			</fb:FilterGroupItem>
			<fb:FilterGroupItem groupName="MANGROUP" name="D" label="Estado" partOfCurrentVariant="true" visibleInFilterBar="true">
				<fb:control>
					<Input value="{modelGeneral>/oDataFilterEquipoUtensilio/estado}" placeholder="Estado" showValueHelp="false" visible="true" width="100%"
