<core:FragmentDefinition xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:layout="sap.ui.layout"
    xmlns:form="sap.ui.layout.form" xmlns:fb="sap.ui.comp.filterbar" xmlns:mvc="sap.ui.core.mvc" >
    <Dialog class="sapUiContentPadding sapUiSizeCompact" title="{i18n>tlListInsumos}" contentWidth="80%" afterClose="onCerrarListInsumos">
        <content>
            <form:Form width="100%" editable="true" visible="{visible>/state}">
                <form:formContainers>
                    <form:FormContainer visible="true">
                        <form:formElements>
                            <form:FormElement visible="true">
                                <form:label>
                                    <Label text="{i18n>lblLote}" design="Bold" width="100%" textAlign="Begin" textDirection="Inherit"/>
                                </form:label>
                                <form:fields>
                                    <Text text="{modelGeneral>/LineaActualRMD/Charg}" width="auto" wrapping="true"/>
                                </form:fields>
                            </form:FormElement>
                            <form:FormElement visible="true">
                                <form:label>
                                    <Label text="{i18n>lblOrden}" design="Bold" width="100%" textAlign="Begin" textDirection="Inherit"/>
                                </form:label>
                                <form:fields>
                                    <Text text="{modelGeneral>/LineaActualRMD/Aufnr}" width="auto" wrapping="true"/>
                                </form:fields>
                            </form:FormElement>
                            <form:FormElement visible="true">
                                <form:label>
                                    <Label text="{i18n>lblCodigo}" design="Bold" width="100%" textAlign="Begin" textDirection="Inherit"/>
                                </form:label>
                                <form:fields>
                                    <Text text="{modelGeneral>/LineaActualRMD/Matnr}" width="auto" wrapping="true"/>
                                </form:fields>
                            </form:FormElement>
                        </form:formElements>
                    </form:FormContainer>
                    <form:FormContainer visible="true">
                        <form:formElements>
                            <form:FormElement visible="true">
                                <form:label>
                                    <Label text="{i18n>lblExpira}" design="Bold" width="100%" textAlign="Begin" textDirection="Inherit"/>
                                </form:label>
                                <form:fields>
                                    <Text text="{path: 'modelGeneral>/LineaActualRMD/VfdatBTP', type: 'sap.ui.model.type.Date', formatOptions: { pattern: 'yyyy/MM/dd HH:mm', UTC: false }}" width="auto" wrapping="true"/>
                                </form:fields>
                            </form:FormElement>
                            <form:FormElement visible="true">
                                <form:label>
                                    <Label text="{i18n>lblEtapa}" design="Bold" width="100%" textAlign="Begin" textDirection="Inherit"/>
                                </form:label>
                                <form:fields>
                                    <Text text="{asociarDatos>/mdId/nivelTxt}" width="auto" wrapping="true"/>
                                </form:fields>
                            </form:FormElement>
                            <form:FormElement visible="true">
                                <form:label>
                                    <Label text="{i18n>lblArticulo}" design="Bold" width="100%" textAlign="Begin" textDirection="Inherit"/>
                                </form:label>
                                <form:fields>
                                    <Text text="{modelGeneral>/LineaActualRMD/Maktx}" width="auto" wrapping="true"/>
                                </form:fields>
                            </form:FormElement>
                        </form:formElements>
                        <form:title/>
                    </form:FormContainer>
                </form:formContainers>
                <form:layout>
                    <form:ResponsiveGridLayout adjustLabelSpan="false" columnsL="2" labelSpanL="3" columnsM="2" labelSpanM="2" labelSpanS="12"/>
                </form:layout>
            </form:Form>
            <Table width="auto" sticky="ColumnHeaders" items="{path:'aListPedidoConsolidado>/'}" updateFinished="onUpdateFinish" noDataText="{i18n>tblNoData}" itemPress="onDetailRmd" mode="None">
                <headerToolbar>
                    <OverflowToolbar>
                        <Title text="{i18n>tblInsumos} ({=${aListPedidoConsolidado>/}.length})"></Title>
                        <ToolbarSpacer/>
                        <ToolbarSeparator/>
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column width="7%" hAlign="Center" vAlign="Center" minScreenWidth="Tablet" demandPopin="false" popinDisplay="WithoutHeader" mergeDuplicates="false" styleClass="cellBorderRight">
                        <Text text="{i18n>clMasivo}" width="auto" wrapping="true"/>
                    </Column>
                    <Column width="10%" hAlign="Center" vAlign="Center" minScreenWidth="Tablet" demandPopin="false" popinDisplay="WithoutHeader" mergeDuplicates="false" styleClass="cellBorderRight">
                        <Text text="{i18n>clCantidadBultos}" width="auto" wrapping="true"/>
                    </Column>
                    <Column width="25%" hAlign="Left" vAlign="Middle" minScreenWidth="Tablet" demandPopin="false" popinDisplay="WithoutHeader" mergeDuplicates="false" styleClass="cellBorderRight">
                        <Text text="{i18n>clMaterial}" width="auto" wrapping="true"/>
                    </Column>
                    <Column width="13%" hAlign="Left" vAlign="Middle" minScreenWidth="Tablet" demandPopin="false" popinDisplay="WithoutHeader" mergeDuplicates="false" styleClass="cellBorderRight">
                        <Text text="{i18n>clLote}" width="auto" wrapping="true"/>
                    </Column>
                    <Column width="7%" hAlign="Left" vAlign="Middle" minScreenWidth="Tablet" demandPopin="false" popinDisplay="WithoutHeader" mergeDuplicates="false" styleClass="cellBorderRight">
                        <Text text="{i18n>clAdicional}" width="auto" wrapping="true"/>
                    </Column>
                    <Column  width="5%" hAlign="Left" vAlign="Middle" minScreenWidth="Tablet" demandPopin="false" popinDisplay="WithoutHeader" mergeDuplicates="false" styleClass="cellBorderRight">
                        <Text text="{i18n>clIFA}" width="auto" wrapping="true"/>
                    </Column>
                    <Column width="5%" hAlign="Left" vAlign="Middle" minScreenWidth="Tablet" demandPopin="false" popinDisplay="WithoutHeader" mergeDuplicates="false" styleClass="cellBorderRight">
                        <Text text="{i18n>clCantidadOP}" width="auto" wrapping="true"/>
                    </Column>
                    <Column width="10%" hAlign="Left" vAlign="Middle" minScreenWidth="Tablet" demandPopin="false" popinDisplay="WithoutHeader" mergeDuplicates="false" styleClass="cellBorderRight">
                        <Text text="{i18n>clCantDespachada}" width="auto" wrapping="true"/>
                    </Column>
                    <Column width="8%" hAlign="Left" vAlign="Middle" minScreenWidth="Tablet" demandPopin="false" popinDisplay="WithoutHeader" mergeDuplicates="false" styleClass="cellBorderRight">
                        <Text text="{i18n>clCantidadVerificada}" width="auto" wrapping="true"/>
                    </Column>
                    <Column width="5%" hAlign="Left" vAlign="Middle" minScreenWidth="Tablet" demandPopin="false" popinDisplay="WithoutHeader" mergeDuplicates="false" styleClass="cellBorderRight">
                        <Text text="{i18n>clUnidadMedida}" width="auto" wrapping="true"/>
                    </Column>
                    <Column width="5%" hAlign="Left" vAlign="Middle" minScreenWidth="Tablet" demandPopin="false" popinDisplay="WithoutHeader" mergeDuplicates="false" styleClass="cellBorderRight">
                        <Text text="{i18n>clFraccion}" width="auto" wrapping="true"/>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem vAlign="Middle">
                        <cells>
                            <CheckBox selected="{aListPedidoConsolidado>checkbox}"/>
                            <Link text="{aListPedidoConsolidado>cantidadBulto}" press="onGetBultoDetalle" textAlign="Center"/>
                            <Text text="{aListPedidoConsolidado>insumoCodigo} - {aListPedidoConsolidado>insumoDescrip}" width="auto" wrapping="true"/>
                            <Text text="{aListPedidoConsolidado>insumoLote}" width="auto" wrapping="true"/>
                            <Text text="{aListPedidoConsolidado>adicional}" width="auto" wrapping="true"/>
                            <Text text="{aListPedidoConsolidado>cantAtendidaIfa}" width="auto" wrapping="true"/>
                            <Text text="{aListPedidoConsolidado>cantidadOP}" width="auto" wrapping="true"/>
                            <Text text="{aListPedidoConsolidado>cantPedida}" width="auto" wrapping="true"/>
                            <Text text="{aListPedidoConsolidado>cantAtendida}" width="auto" wrapping="true"/>
                            <Text text="{aListPedidoConsolidado>insumoUmb}" width="auto" wrapping="true"/>
                            <Text text="{aListPedidoConsolidado>fraccion}" width="auto" wrapping="true"/>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
        <endButton>
            <Button text="{i18n>btnClose}" press="onCerrarListInsumos" type="Reject"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>