<core:FragmentDefinition xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:layout="sap.ui.layout"
    xmlns:form="sap.ui.layout.form" xmlns:fb="sap.ui.comp.filterbar" xmlns:mvc="sap.ui.core.mvc" >
    <Dialog class="sapUiContentPadding sapUiSizeCompact" title="{i18n>tlListInsumos}" contentWidth="60%" afterClose="onCerrarBultoDetalle">
        <content>
            <form:Form width="100%" editable="true" visible="{visible>/state}">
                <form:formContainers>
                    <form:FormContainer visible="true">
                        <form:formElements>
                            <form:FormElement visible="true">
                                <form:label>
                                    <Label text="{i18n>lblLote}" design="Bold" width="100%" textAlign="Begin" textDirection="Inherit"/>
                                </form:label>
                                <form:fields>
                                    <Text text="0000000052" width="auto" wrapping="true"/>
                                </form:fields>
                            </form:FormElement>
                            <form:FormElement visible="true">
                                <form:label>
                                    <Label text="{i18n>lblCodigo}" design="Bold" width="100%" textAlign="Begin" textDirection="Inherit"/>
                                </form:label>
                                <form:fields>
                                    <Text text="1000000488" width="auto" wrapping="true"/>
                                </form:fields>
                            </form:FormElement>
                        </form:formElements>
                    </form:FormContainer>
                    <form:FormContainer visible="true">
                        <form:formElements>
                            <form:FormElement visible="true">
                                <form:label>
                                    <Label text="{i18n>lblInsumo}" design="Bold" width="100%" textAlign="Begin" textDirection="Inherit"/>
                                </form:label>
                                <form:fields>
                                    <Text text="EPINEFRINA BITARTRATO" width="auto" wrapping="true"/>
                                </form:fields>
                            </form:FormElement>
                        </form:formElements>
                        <form:title/>
                    </form:FormContainer>
                </form:formContainers>
                <form:layout>
                    <form:ResponsiveGridLayout adjustLabelSpan="false" columnsL="2" labelSpanL="3" columnsM="2" labelSpanM="2" labelSpanS="12"/>
                </form:layout>
            </form:Form>
            <Table width="auto" sticky="ColumnHeaders" items="{path:'modelGeneral>/listaInsumosDetalle'}" updateFinished="onUpdateFinish" noDataText="{i18n>tblNoData}" itemPress="onDetailRmd" mode="None">
                <headerToolbar>
                    <OverflowToolbar>
                        <Title text="{i18n>tblInsumos} ({=${modelGeneral>/listaInsumosDetalle}.length})"></Title>
                        <ToolbarSpacer/>
                        <ToolbarSeparator/>
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
                    <Column width="auto" hAlign="Left" vAlign="Middle" minScreenWidth="Tablet" demandPopin="false" popinDisplay="WithoutHeader" mergeDuplicates="false" styleClass="cellBorderRight">
                        <Text text="{i18n>clEstado}" width="auto" wrapping="true"/>
                    </Column>
                    <Column width="auto" hAlign="Left" vAlign="Middle" minScreenWidth="Tablet" demandPopin="false" popinDisplay="WithoutHeader" mergeDuplicates="false" styleClass="cellBorderRight">
                        <Text text="{i18n>clNumeroBulto}" width="auto" wrapping="true"/>
                    </Column>
                    <Column width="auto" hAlign="Left" vAlign="Middle" minScreenWidth="Tablet" demandPopin="false" popinDisplay="WithoutHeader" mergeDuplicates="false" styleClass="cellBorderRight">
                        <Text text="{i18n>clCodigoBulto}" width="auto" wrapping="true"/>
                    </Column>
                    <Column width="auto" hAlign="Left" vAlign="Middle" minScreenWidth="Tablet" demandPopin="false" popinDisplay="WithoutHeader" mergeDuplicates="false" styleClass="cellBorderRight">
                        <Text text="{i18n>clCantDespachada}" width="auto" wrapping="true"/>
                    </Column>
                    <Column  width="auto" hAlign="Left" vAlign="Middle" minScreenWidth="Tablet" demandPopin="false" popinDisplay="WithoutHeader" mergeDuplicates="false" styleClass="cellBorderRight">
                        <Text text="{i18n>clPTara}" width="auto" wrapping="true"/>
                    </Column>
                    <Column width="auto" hAlign="Left" vAlign="Middle" minScreenWidth="Tablet" demandPopin="false" popinDisplay="WithoutHeader" mergeDuplicates="false" styleClass="cellBorderRight">
                        <Text text="{i18n>clUnidadMedida}" width="auto" wrapping="true"/>
                    </Column>
                    <Column width="5%" hAlign="Left" vAlign="Middle" minScreenWidth="Tablet" demandPopin="false" popinDisplay="WithoutHeader" mergeDuplicates="false" styleClass="cellBorderRight">
                        <Text text="" width="auto" wrapping="true"/>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem vAlign="Middle">
                        <cells>
                            <Text text="{modelGeneral>estado}" width="auto" wrapping="true"/>
                            <Text text="{modelGeneral>numeroBultos}" width="auto" wrapping="true"/>
                            <Text text="{modelGeneral>codigoBulto}" width="auto" wrapping="true"/>
                            <Text text="{modelGeneral>cantidadDespachada}" width="auto" wrapping="true"/>
                            <Text text="{modelGeneral>ptara}" width="auto" wrapping="true"/>
                            <Text text="{modelGeneral>unidadMedidad}" width="auto" wrapping="true"/>
                            <Button icon="sap-icon://bar-code" tooltip="{i18n>btnBarcode}" press="onValidationMassive" type="Emphasized"/>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
        <endButton>
            <Button text="{i18n>btnClose}" press="onCerrarBultoDetalle" type="Reject"/>
        </endButton>
    </Dialog>
</core:FragmentDefinition>