<mvc:View
    height="100%"
    controllerName="sap.zen.dsh.rsrt.controller.Layout"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:m="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
    xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
    id="LayoutView">
  <m:HBox
      id="prev-layout-clt1">
    <m:Panel
        id="prev-layout-clt2"
        width="auto"
        class="sapUiResponsiveMargin"
        headerText="{i18n>FREE_DIMENSIONS}">
      <m:content>
        <m:SelectList
            id="FreeDim"
            items="{om>/dataProvider/0/FreeDimensions}"
            itemPress="dimensionPress">
          <core:Item
              id="prev-layout-clt3"
              text="{om>Description}"
              key="{om>Name}"
              app:Axis="{om>Axis}"
              app:Name="{om>Name}"
              app:Position="{om>Position}"
              app:LastPosition="{om>LastPosition}"
              app:IsStructure="{om>IsStructure}" />
        </m:SelectList>
      </m:content>
    </m:Panel>
    <m:Panel
        id="prev-layout-clt4"
        width="auto"
        class="sapUiResponsiveMargin"
        headerText="{i18n>ROWS}">
      <m:SelectList id="RowDim"
                    items="{om>/dataProvider/0/RowsDimensions}"
                    itemPress="dimensionPress">
        <core:Item id="prev-layout-clt5"
                   text="{om>Description}"
                   key="{om>Name}"
                   app:Axis="{om>Axis}"
                   app:Name="{om>Name}"
                   app:Position="{om>Position}"
                   app:LastPosition="{om>LastPosition}"
                   app:IsStructure="{om>IsStructure}" />
      </m:SelectList>
    </m:Panel>
    <m:Panel
        width="auto"
        id="prev-layout-clt6"
        class="sapUiResponsiveMargin"
        headerText="{i18n>COLS}">
      <m:SelectList
          id="ColDim"
          items="{om>/dataProvider/0/ColumnsDimensions}"
          itemPress="dimensionPress">
        <core:Item
            id="prev-layout-clt7"
            text="{om>Description}"
            key="{om>Name}"
            app:Axis="{om>Axis}"
            app:Name="{om>Name}"
            app:Position="{om>Position}"
            app:LastPosition="{om>LastPosition}"
            app:IsStructure="{om>IsStructure}" />
      </m:SelectList>
    </m:Panel>
  </m:HBox>
</mvc:View>
