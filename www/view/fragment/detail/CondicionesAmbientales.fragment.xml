<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<ScrollContainer width="100%" height="80%" horizontal="true" vertical="true" focusable="true">
		<Table width="auto" sticky="ColumnHeaders" items="{path:'modelGeneral>/tblCondicionesAmbientales'}" updateFinished="onUpdateFinish" growing="true"
			growingScrollToLoad="true" noDataText="{i18n>tblNoData}" mode="None">
			<columns>
        <Column width="auto" hAlign="Left" vAlign="Middle" popinDisplay="Inline" mergeDuplicates="false">
					<Text text="" width="auto" maxLines="5" wrapping="true" textAlign="Begin" textDirection="Inherit"/>
				</Column>
			</columns>
			<items>
				<ColumnListItem>
          <Text text="{modelGeneral>description}" width="auto" maxLines="5" wrapping="true" textAlign="End" textDirection="Inherit"/>
				</ColumnListItem>
			</items>
		</Table>
	</ScrollContainer>
</core:FragmentDefinition>